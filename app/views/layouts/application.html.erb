<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %> | Blog App</title>
    <%= render "layouts/rails_default" %>
  </head>
  <body>
    <div class="container">
      <%= render "layouts/header" %>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
      <%= render "layouts/footer" %>
    </div>
  </body>
</html>
