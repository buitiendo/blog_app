<%= form_with(model: entry, local: true) do |form| %>
<% if entry.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

  <ul>
    <% entry.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>
<fieldset>
  <div class="row">
    <div class="col-sm-12 col-md-12">
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="glyphicon glyphicon-pencil"></i>
          </span>
          <%= form.text_field :title, placeholder: "title", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="glyphicon glyphicon-edit"></i>
          </span>
          <%= form.text_area :body, placeholder: "content", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="glyphicon glyphicon-calendar"></i>
          </span>
          <%= form.date_field :date, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= form.submit "create", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</fieldset>
<% end %>
